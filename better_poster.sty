% makes title
\makeatletter
\def\@maketitle{
  \vspace{0.5cm}
    {\Huge \bf
        \begin{flushleft}
            \@title
        \end{flushleft}
    }\vspace{-0.5em}
    { \@author}
}
\makeatother

% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{PineGreen}{%
        \parbox[t][0.3\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{40}{50} \selectfont
            \begin{center}
                 \nohyphens{#1}
            \end{center}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}

